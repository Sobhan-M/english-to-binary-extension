{
    "manifest_version": 2,
    "name": "Binary To Text",
    "version": "0.1",
    "description": "Converts ASCII characters into their equivalent binary representation and vice versa.",
    "browser_action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png"
        },
        "default_popup": "index.html",
        "default_title": "Binary To Text"
    },
    "permissions": [
        "clipboardWrite",
        "clipboardRead"
    ]
}